extends layout.pug

include utils.pug

append head
  link(rel='stylesheet' href='/stylesheets/navbar.css')
  link(rel='stylesheet' href='/stylesheets/profile.css')
  link(rel='stylesheet' href='/stylesheets/global.css')
  link(rel='stylesheet' href='/stylesheets/footer.css')
  script(src='/javascripts/profile.js' type='module')

block content
  div(class="hidden" id="modal")
        div(class="form-container modal-content")
            h1(class="form-header") Edit User Details
            form(action=`/users/profile/${user.id}` method="post" class="user-form" id='user-form')
                +field("Username", "Username", user.username)
                +field("Email", "Email", user.email)
                +field("Profile Picture", "Profile Picture", user.image)
                div(class='submit-div')
                    button(type='submit' id='edit-btn' class='btn submit edit-user-btn') Submit
                    a(href=`/users/profile/${user.id}` class='a clear') Clear
  div(class='background-image body-container')
        div(id='main-container')
          div(id='middle-div')
            div(class='person-image-container')
              img(src= user.image class='profile-img')
            div(class='user-name-container')
              //- div(id='user-name')= user.username
            div(id='person-details-container')
              //- div(id='person-details') Details
            div(id='person-details-container1')
              //- div(id='email') Email: #{user.email}
            div(id='edit-btn-container')
              button(class='page-edit-btn' id='modal-button') Edit
              button(class='page-delete-btn' id='delete-btn') Delete
          div(id='person-details-container2')
            div(id='fav-book-container')
              div(class='userName')
                div(id='user-name') User Name:
                div(id='username-value') #{user.username}
              div(class='email-block')
                div(id='email') Email:
                div(id='email-value') #{user.email}
            div(id='favorite-books')
                div(class='fav-book-items') Your Favorite Books
                div(class='favorite-books-top')
                  each review in reviews
                    img(src= review.Book.cover class='books')
  footer
     hr(class="line-over-contributors")
     div(class="footer")
       p(class="contributors") Contributors:
       div(class="each-contributor")
         img(src="/images/github-logo.png" class="github-logo")
         a(href="https://github.com/jmthorn" class="github-links") Jessica Thornton
       div(class="each-contributor")
         img(src="/images/github-logo.png" class="github-logo")
         a(href="https://github.com/Skulllady" class="github-links") Lisa Noor
       div(class="each-contributor")
         img(src="/images/github-logo.png" class="github-logo")
         a(href="https://github.com/keithmellea" class="github-links") Keith Mellea
       div(class="each-contributor")
         img(src="/images/github-logo.png" class="github-logo")
         a(href="https://github.com/Jc-008" class="github-links") Jonathan Chan
       div(class="each-contributor")
         img(src="/images/github-logo.png" class="github-logo")
         a(href="https://github.com/dshue20" class="github-links") Derek Shue (Advisor)
